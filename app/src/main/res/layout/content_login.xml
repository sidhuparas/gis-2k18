<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.udacity.googleindiascholarships.ui.LoginActivity"
    tools:showIn="@layout/activity_login">

    <ImageView
        android:id="@+id/gis_logo_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gis_logo" />

    <TextView
        android:id="@+id/gis_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gis_logo_img"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/bitter_bold"
        android:text="@string/gis_2018"
        android:textAlignment="center"
        android:textColor="@color/navBarBackground"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gis_subheading_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gis_txt"
        android:fontFamily="@font/bitter_regular"
        android:text="- by the scholars, for the scholars"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/username_txt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/gis_subheading_txt"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_account"
        android:fontFamily="@font/bitter_regular"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:hint="@string/username_hint"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/white"
        app:met_textColor="#FFF"
        app:met_textColorHint="@color/lightwhite" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/password_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_txt"
        android:drawablePadding="8dp"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:fontFamily="@font/bitter_regular"
        android:hint="@string/password_hint"
        android:padding="16dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/opaqueWhite"
        android:textSize="18sp"
        app:backgroundTint="@color/opaqueWhite"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/white"
        app:met_textColor="@color/white"
        app:met_textColorHint="@color/lightwhite" />

    <Button
        android:id="@+id/sign_in_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_txt"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_48"
        android:background="@color/white"
        android:elevation="5dp"
        android:fontFamily="@font/bitter_regular"
        android:text="@string/sign_in"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:id="@+id/forgot_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/sign_in_btn"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="@font/bitter_regular"
        android:text="@string/forgot_password"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/opaqueWhite"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>
